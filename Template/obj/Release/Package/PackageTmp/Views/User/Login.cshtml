@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title>企宣惠后台管理系统</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="author" content="Prakasam Mathaiyan">
    <meta name="description" content="">
    <link rel="icon" href="~/Content/assets/images/favicon.png" type="image/gif">
    <link rel="stylesheet" type="text/css" href="~/Content/assets/plugins/bootstrap/bootstrap.css">
    <link rel="stylesheet" type="text/css" href="~/Content/assets/css/main.css">
    <link rel="stylesheet" href="~/Content/assets/css/base.css" />
</head>
<body>
    <div class="bg"></div>
    <div class="container">
        <div class="line bouncein">
            <div class="xs6 xm4 xs3-move xm4-move">
                <div style="height:150px;"></div>
                <form>
                    <input name="url" type="hidden" value="@ViewBag.Url" />
                    <div class="panel loginbox">
                        <div class="text-center margin-big padding-big-top">
                            <h1>后台管理中心</h1>
                        </div>
                        <div class="panel-body" style="padding:30px; padding-bottom:10px; padding-top:10px;">
                            <div class="form-group">
                                <div class="field field-icon-right">
                                    <input type="text" class="input input-big" name="userName" placeholder="请输入用户名" />
                                    <span class="icon icon-user margin-small"></span>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="field field-icon-right">
                                    <input type="password" class="input input-big" name="userPwd" placeholder="请输入密码" />
                                    <span class="icon icon-key margin-small"></span>
                                </div>
                            </div>
                        </div>
                        <div style="padding:30px;">
                            <input type="button" id="button" class="button button-block bg-main text-big input-big" value="登录" onclick="Login()">
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script type="text/javascript" src="~/Content/assets/plugins/lib/jquery-2.2.4.min.js"></script>
    <script type="text/javascript" src="~/Content/assets/plugins/lib/jquery-ui.min.js"></script>
    <script type="text/javascript" src="~/Content/assets/plugins/bootstrap/bootstrap.min.js"></script>
    <script type="text/javascript" src="~/Content/assets/plugins/lib/plugins.js"></script>
    <script type="text/javascript" src="~/Content/script/Util.js"></script>

    <script type="text/javascript">
        //登录
        function Login() {
            var name = $('input[name=userName]').val();
            var pwd = $('input[name=userPwd]').val();
            var url = $('input[name=url]').val();
            var data = { 'name': name, 'pwd': pwd, 'url': url };
            $.post('login', data, (res) => {
                if (res.state) {
                    window.location.href = res.url;
                } else {
                    alert(res.message);
                }
            }, 'json');
        }
    </script>


</body>
</html>
