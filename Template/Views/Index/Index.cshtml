
@{
    Layout = "~/Views/Shared/_DispLayout.cshtml";
}
@model Template.Models.IndexPageModel

<div class="banner">
    <div class="slider">
        <ul class="slider-main">
            @if (Model.banners.Count > 0)
            {
                int n = 0;
                foreach (var item in Model.banners)
                {
                    n++;
                    string cl = "img" + n;
                    <li class="slider-panel @cl" style="background-image:url(@item);"></li>
                }
            }
        </ul>
        <div class="slider-extra">
            <ul class="slider-nav">
                <li class="slider-item slider-item-selected"></li>
                <li class="slider-item"></li>
                <li class="slider-item"></li>
            </ul>
            <div class="slider-page">
                <a class="slider-pre" href="javascript:;;">&lt;</a>
                <a class="slider-next" href="javascript:;;">&gt;</a>
            </div>
        </div>

    </div>
</div>
<!--main-->
<div class="whiteBg">
    <div class="pubTit aos-init aos-animate" aos="zoom-in" id="01"> <img src="~/Content/disp/images/indextit1.png" /> </div>
    <div class="container introBox">
        <div class="row">
            <div class="fl introText aos-init aos-animate" aos="fade-right" aos-delay="100">
                <div class="leftTit"><em>艾雪文化</em><i>/ AIXUE CULTURE</i></div>
                <p>@Model.ComInfo</p>
